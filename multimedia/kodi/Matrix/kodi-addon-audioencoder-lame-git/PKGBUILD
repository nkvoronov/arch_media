pkgname=kodi-addon-audioencoder-lame-git
_gitname='source-git'
_verpkg='3.0.1'
pkgver=3.0.1_g0f1d5b3
pkgrel=1
pkgdesc="Lame Audio Encoder add-on for Kodi"
arch=('x86_64')
url='https://github.com/xbmc/audioencoder.lame.git'
license=('GPL')
groups=('kodi-addons' 'kodi-addons-audioencoder')
provides=('kodi-addon-audioencoder-lame-git')
replaces=('kodi-addon-audioencoder-lame-git')
conflicts=('kodi-addon-audioencoder-lame')
depends=('kodi-devel')
makedepends=('cmake' 'kodi-devel-dev')
source=("${_gitname}::git+https://github.com/xbmc/audioencoder.lame.git#branch=Matrix")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_gitname}"
  _git=`git rev-parse --short HEAD`
  printf "%s_%s" "$_verpkg" "g$_git"
}

build() {
  cd "${srcdir}/${_gitname}"
  cmake \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DCMAKE_BUILD_TYPE=Release \
  -DBUILD_SHARED_LIBS=1 \
  -DUSE_LTO=1
  make
}

package() {
  cd "${srcdir}/${_gitname}"
  make DESTDIR="$pkgdir/" install
}
