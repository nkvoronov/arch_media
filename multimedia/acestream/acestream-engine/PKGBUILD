
pkgname=acestream-engine
_gitname='acestream'
pkgver=3.0.5.1
pkgrel=1
pkgdesc="ACE Stream engine"
arch=('x86_64')
url="http://acestream.org/"
license=('unknown')
depends=('python2-setuptools' 'python2-xlib' 'python2-m2crypto' 'python2-apsw' 'openssl-1.0')

source=("${_gitname}::git+https://github.com/nkvoronov/tools-ace.git#branch=master")

md5sums=('SKIP')

package() {
  cd "$srcdir/acestream"
  mkdir -p "$pkgdir/usr"
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/usr/share"
  install -Dm755 "acestreamengine-client-console" "$pkgdir/usr/bin"
  cd "$srcdir/acestream/x86_64"
  cp -a acestream "$pkgdir/usr/share/acestream/"
}
