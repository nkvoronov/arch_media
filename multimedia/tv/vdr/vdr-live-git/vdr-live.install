post_install() {
  mkdir -p /usr/share/vdr/plugins/live
  cd /usr/share/vdr/plugins/live
  if [ ! -e live.pem ] || [ ! -e live-key.pem ]; then
    openssl req -new -x509 -keyout live-key.pem -out live.pem -days 9999 -nodes -batch
  fi
}

post_upgrade() {
  post_install
}

post_remove() {
  rm /usr/share/vdr/plugins/live/live.pem
  rm /usr/share/vdr/plugins/live/live-key.pem
  rmdir /usr/share/vdr/plugins/live 2> /dev/null
}
