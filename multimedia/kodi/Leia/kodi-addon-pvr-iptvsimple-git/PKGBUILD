pkgname=kodi-addon-pvr-iptvsimple-git
_gitname='source-git'
_verpkg='2.4.14'
pkgver=2.4.14_g2a649d7
pkgrel=1
_branch=Krypton
pkgdesc='IPTV Simple PVR client addon for Kodi'
arch=('i686' 'x86_64')
url="https://github.com/kodi-pvr/pvr.iptvsimple"
license=('GPL')
groups=('kodi')
makedepends=('cmake' 'git' 'kodi-platform')
depends=('kodi>=16.0')
provides=('kodi-addon-pvr-iptvsimple')
conflicts=('kodi-addon-pvr-iptvsimple' 'kodi-pvr-addons')
source=("${_gitname}::git+https://github.com/kodi-pvr/pvr.iptvsimple.git#branch=${_branch}")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_gitname}"
  _git=`git rev-parse --short HEAD`
  printf "%s_%s" "$_verpkg" "g$_git"
}

build() {
  cd "${srcdir}/${_gitname}"

  rm -rf build
  mkdir build
  cd build

  cmake ../ -DCMAKE_INSTALL_PREFIX=/usr \
  -DCMAKE_INSTALL_LIBDIR=/usr/lib/kodi \
  -DCMAKE_BUILD_TYPE=Release  || return 1
  make || return 1
}

package() {
  cd "${srcdir}/${_gitname}/build"
  make DESTDIR="$pkgdir" install
}
