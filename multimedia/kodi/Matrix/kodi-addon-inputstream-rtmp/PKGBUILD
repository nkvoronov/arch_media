pkgname=kodi-addon-inputstream-rtmp
_gitname='source-git'
_verpkg='19.0.0'
pkgver=19.0.0
pkgrel=10
pkgdesc="librtmp support for Kodi 18+"
arch=('x86_64' 'i686' 'armv7h')
url="https://github.com/xbmc/inputstream.rtmp"
license=('GPL2')
depends=('kodi' 'rtmpdump' 'p8-platform')
makedepends=('kodi-dev' 'cmake' 'git')
provides=("${pkgname%}")
conflicts=("${pkgname%}")
source=("${_gitname}::git+https://github.com/xbmc/inputstream.rtmp.git#tag=${_verpkg}-Matrix")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_gitname}"
  _git=`git rev-parse --short HEAD`
  printf "%s" "$_verpkg"
}

build() {
  cd "$srcdir/${_gitname}"
  mkdir -p build && pushd build
  cmake .. -DCMAKE_INSTALL_PREFIX="/usr"
  make
  popd
}

package() {
  cd "$srcdir/${_gitname}/build"
  make DESTDIR="$pkgdir/" install
}
