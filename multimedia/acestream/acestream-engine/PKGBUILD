
pkgname=acestream-engine
_gitname='acestream'
pkgver=3.1.16
pkgrel=2
pkgdesc="ACE Stream engine"
arch=('x86_64')
url="http://acestream.org/"
license=('unknown')
depends=('python2-setuptools' 'openssl-1.0')

source=("${_gitname}::git+https://github.com/nkvoronov/tools-ace.git#branch=v3.1.16"
        'acestreamengine-client-console')

md5sums=('SKIP'
         '5dd078dc60f96aef230b87cf0c8aed56')

package() {
  mkdir -p "$pkgdir/usr/bin"
  mkdir -p "$pkgdir/opt"
  install -Dm755 acestreamengine-client-console "$pkgdir/usr/bin"
  cd "$srcdir/acestream"
  cp -a acestream "$pkgdir/opt"
}
