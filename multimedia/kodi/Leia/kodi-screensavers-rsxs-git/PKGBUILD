pkgname=kodi-screensavers-rsxs-git
_gitname='source-git'
_verpkg='3.0.0'
pkgver=3.0.0_g7cb6485
pkgrel=1
pkgdesc='RSXS screensavers addon for Kodi'
arch=('i686' 'x86_64')
url='https://github.com/notspiff/screensavers.rsxs'
license=('GPL')
groups=('kodi')
makedepends=('cmake' 'glm')
depends=('kodi-git' 'libpng')
source=("${_gitname}::git+https://github.com/xbmc/screensavers.rsxs.git#branch=Leia")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_gitname}"
  _git=`git rev-parse --short HEAD`
  printf "%s_%s" "$_verpkg" "g$_git"
}

prepare() {
   git clone --depth=1 https://github.com/xbmc/xbmc.git -b Leia
   git clone --depth=1 https://github.com/xbmc/screensavers.rsxs.git -b Leia
#  cd "${srcdir}/${_gitname}"
#  for f in "$srcdir"/*.patch; do patch -p1 < "$f"; done
}

build() {
  cd "${srcdir}/screensavers.rsxs"

  rm -rf build
  mkdir build
  cd build

  cmake \
  -DCMAKE_INSTALL_PREFIX=/usr \
  -DADDONS_TO_BUILD=screensavers.rsxs \
  -DADDON_SRC_PREFIX=../.. \
  -DCMAKE_BUILD_TYPE=Debug \
  -DCMAKE_INSTALL_PREFIX=../../xbmc/kodi-build/addons
  -DPACKAGE_ZIP=1 \
  ../../xbmc/cmake/addons
  make
}

package() {
  cd "${srcdir}/${_gitname}/build"
  make DESTDIR="$pkgdir" install
}
