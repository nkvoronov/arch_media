pkgname=kodi-addon-vfs-libarchive
_gitname='source-git'
_verpkg='19.0.1'
pkgver=19.0.1
pkgrel=12
pkgdesc='This is a Kodi VFS addon to support archives.'
arch=('i686' 'x86_64' 'armv6h' 'armv7h' 'aarch64')
url="https://github.com/xbmc/vfs.libarchive.git"
license=('GPL')
groups=('kodi')
makedepends=('cmake' 'git' 'kodi-dev')
depends=('kodi')
source=("${_gitname}::git+https://github.com/xbmc/vfs.libarchive.git#branch=Matrix")
md5sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_gitname}"
  _git=`git rev-parse --short HEAD`
  printf "%s" "$_verpkg"
}

build() {
  cd "${srcdir}/${_gitname}"
  mkdir -p build && pushd build
  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release \
    ..
  make
  popd
}

package() {
  cd "${srcdir}/${_gitname}/build"
  make DESTDIR="$pkgdir" install
}
